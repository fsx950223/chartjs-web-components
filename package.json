    "tsconfig-paths": "^3.8.0",
    "tslint": "^5.12.1",
    "tslint-microsoft-contrib": "^6.0.0",
    "typescript": "^3.3.1",
    "typescript-lit-html-plugin": "^0.9.0",
    "vue": "^2.6.2",
    "vue-loader": "^15.6.2",
    "vue-property-decorator": "^7.3.0",
    "webpack": "^4.29.1",
    "webpack-bundle-analyzer": "^3.0.3",
