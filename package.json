  "contributors": [
    "fsx950223"
  ],
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS && npm run lint"
    }
  },
  "main": "dist/base.common.js",
  "unpkg": "dist/base.root.js",
  "license": "MIT",
