    "webpack-dev-server": "^3.1.14",
    "webpack-node-externals": "^1.7.2"
  },
  "peerDependencies": {
    "react": "^16.8.0",
    "vue-property-decorator": "^7.3.0",
    "react-dom": "^16.8.0",
    "vue": "^2.6.2",
    "chart.js": "^2.7.3",
    "lit-element": "2.0.1"
  }
